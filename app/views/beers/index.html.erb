<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<p> <%= pluralize(@beers.count, 'beer') %> added to Ratebeer </p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to('New Beer', new_beer_path) if current_user %>
</p>