<!DOCTYPE html>
<html>

  <% if session[:last_rating].nil? %>
    <p>no ratings given</p>
  <% else %>
    <p>previous rating: <%= session[:last_rating] %></p>
  <% end %>
  
  <head>

    <title>Ratebeer</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 
  </head>

  <body>

    <div class="navibar">
      <%= link_to 'breweries', breweries_path %>
      <%= link_to 'beers', beers_path %>
      <%= link_to 'ratings', ratings_path %>
      <%= link_to 'users', users_path %>
      <% if current_user %>
        <%= link_to current_user.username, current_user %>
        <%= link_to 'rate a beer', new_rating_path %>
        <%= link_to 'signout', signout_path, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% else %>
        <%= link_to 'singin', signin_path %>
        <%= link_to 'signup', signup_path %>
      <% end %>
      

    </div>

    <%= yield %>
    
  </body>

</html>
