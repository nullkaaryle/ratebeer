<h2>Create new rating</h2>

<%= form_for(@rating) do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :beer_id, "Score:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
           <%= f.collection_select :beer_id, @beers, :id, :to_s, selected: @rating.beer_id, class: "form-control" %>
           <%= f.number_field :score %>
        </div>
    </div>

  <div>
    <%= f.submit class: "btn btn-default btn-primary" %>  
  </div>

 

<% end %>
