<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Total ratings</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.ratings.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>