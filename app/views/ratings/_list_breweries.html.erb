<table class="table table-hover">
  <thead>
  <tr>
    <th>Brewery name</th>
    <th>Average</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.average_rating.round(1) %></td>
      </tr>
    <% end %>
  </tbody>
</table>